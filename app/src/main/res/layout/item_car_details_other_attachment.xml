<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_7sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_7sdp"
    android:background="@drawable/certificate_upload_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/_3sdp">

    <TextView
        android:id="@+id/lblOtherCertificate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/ctaBackground"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/btnDeleteOtherCertificate"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:padding="@dimen/_3sdp"
        android:src="@drawable/close_circle_icon"
        app:tint="@color/appPrimary" />
</LinearLayout>