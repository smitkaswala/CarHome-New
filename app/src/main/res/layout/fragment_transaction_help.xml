<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/expande_colore">

    <LinearLayout
        android:id="@+id/mAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:adjustViewBounds="true"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_semibold_600"
            android:gravity="center"
            android:text="@string/need_help_"
            android:textColor="@color/textOnWhite"
            android:textSize="@dimen/_15sdp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/home"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:adjustViewBounds="true"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_account"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mMenu"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:adjustViewBounds="true"
            android:padding="@dimen/_9sdp"
            android:src="@drawable/ic_more_new"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mAppBar"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/raleway_bold_700"
            android:text="@string/validation_and_control_centre"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/inter_regular_400"
            android:text="@string/feel_free_to_reach_out_to_"
            android:textColor="@color/skip"
            android:textSize="@dimen/_9sdp" />

        <LinearLayout
            android:id="@+id/firstPhone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/phoneImage"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:background="@drawable/oval_shape"
                    android:backgroundTint="@color/tint_mode"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/ic_call" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/phoneName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold_600"
                        android:paddingStart="@dimen/_10sdp"
                        android:text="@string/customer_support_"
                        android:textColor="@color/items_color"
                        android:textColorHint="@color/items_color"
                        android:textSize="@dimen/_11sdp"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/phoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular_400"
                        android:paddingStart="@dimen/_10sdp"
                        android:text="@string/phone_number_demo_"
                        android:textColor="@color/skip"
                        android:textColorHint="@color/items_color"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondPhone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/secondPhoneImage"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:background="@drawable/oval_shape"
                    android:backgroundTint="@color/tint_mode"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/ic_call" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/secondPhoneName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold_600"
                        android:paddingStart="@dimen/_10sdp"
                        android:text="@string/customer_support_"
                        android:textColor="@color/items_color"
                        android:textColorHint="@color/items_color"
                        android:textSize="@dimen/_11sdp"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/secondPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular_400"
                        android:paddingStart="@dimen/_10sdp"
                        android:text="@string/phone_number_second_demo_"
                        android:textColor="@color/skip"
                        android:textColorHint="@color/items_color"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/emailImage"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:background="@drawable/oval_shape"
                    android:backgroundTint="@color/tint_mode"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/ic_email_new" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/emailText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold_600"
                        android:paddingStart="@dimen/_10sdp"
                        android:text="@string/email_hint"
                        android:textColor="@color/items_color"
                        android:textColorHint="@color/items_color"
                        android:textSize="@dimen/_11sdp"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/emailName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular_400"
                        android:paddingStart="@dimen/_10sdp"
                        android:text="@string/demo_email_"
                        android:textColor="@color/skip"
                        android:textColorHint="@color/items_color"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>