<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="11dp"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/filtersCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <LinearLayout
            android:id="@+id/filtersLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search_background"
            android:visibility="visible">

            <ImageView
                android:id="@+id/smallIcon"
                android:layout_width="16dp"
                android:layout_height="17dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="11dp"
                android:scaleType="center"
                android:src="@drawable/ic__5" />

            <TextView
                android:id="@+id/filterNameTv"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="11dp"
                android:fontFamily="@font/inter_medium_500"
                android:gravity="center_vertical"
                android:textColor="@color/textOnWhiteAccentGray"
                android:textSize="13sp" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/logoLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search_background"
            android:visibility="gone">

            <ImageView
                android:id="@+id/largeIcon"
                android:layout_width="73dp"
                android:layout_height="17dp"
                android:layout_margin="11dp"
                android:src="@drawable/amu_bubble_shadow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>