<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <View
            android:id="@+id/indicator"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rounded_rect_100_greyscale"
            android:visibility="visible" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/inter_semibold_600"
            android:text="@string/diff_cat_title"
            android:textColor="@color/textOnWhite"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/inter_semibold_600"
            android:text="@string/diff_cat_subtitle"
            android:textColor="@color/textOnWhiteAccentGray"
            android:textSize="@dimen/_10sdp"

            />

        <ro.westaco.carhome.utils.TouchEventInterceptorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/categoryET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:background="@drawable/auth_text_input_background"
                android:fontFamily="@font/inter_medium_500"
                android:gravity="top|start"
                android:hint="@string/type_here"
                android:inputType="textMultiLine"
                android:lines="10"
                android:maxLength="255"
                android:padding="@dimen/_5sdp"
                android:scrollbars="vertical"
                android:textSize="@dimen/_12sdp" />
        </ro.westaco.carhome.utils.TouchEventInterceptorLayout>

        <TextView
            android:id="@+id/cta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/cta_background"
            android:fontFamily="@font/manrope_semibold_600"
            android:gravity="center"
            android:paddingVertical="@dimen/_12sdp"
            android:text="@string/submit"
            android:textColor="@color/textOnSolid"
            android:textSize="@dimen/_11sdp" />
    </LinearLayout>


</layout>