<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/mSelectDriver"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mSelectDriverImage"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@drawable/oval_shape"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:src="@drawable/ic_profile_picture" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_regular_400"
                    android:paddingStart="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:textSize="@dimen/_11sdp">

                    <TextView
                        android:id="@+id/mSelectDriverName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular_400"
                        android:text="@string/select_driver"
                        android:textColor="#162651"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/mSelectDriverEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular_400"
                        android:text="@string/select_driver"
                        android:textColor="#162651"
                        android:textSize="@dimen/_11sdp"
                        android:visibility="visible"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/mRemove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:src="@drawable/ic_minus_cirlce"/>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</layout>
