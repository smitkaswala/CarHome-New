<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/appPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold_600"
                    android:text="@string/address"
                    android:textColor="@color/textOnWhite"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:fontFamily="@font/inter_medium_500"
                    android:text="@string/details_address"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <ImageView
                    android:id="@+id/mClose"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="3dp"
                    android:src="@drawable/ic_close" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/inter_medium_500"
                            android:text="@string/street"
                            android:textColor="@color/textOnWhiteAccentGray"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/inter_medium_500"
                            android:text="@string/mendetory"
                            android:textColor="@color/redExpired"
                            android:textSize="@dimen/_11sdp" />

                    </LinearLayout>


                    <EditText
                        android:id="@+id/streetName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/auth_text_input_background"
                        android:fontFamily="@font/inter_medium_500"
                        android:hint="@string/street"
                        android:inputType="text"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:textColor="@color/textOnWhite"
                        android:textColorHint="@color/hintOnWhite"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/inter_medium_500"
                        android:text="@string/address_number"
                        android:textColor="@color/textOnWhiteAccentGray"
                        android:textSize="@dimen/_11sdp" />


                    <EditText
                        android:id="@+id/streetNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/auth_text_input_background"
                        android:fontFamily="@font/inter_medium_500"
                        android:hint="@string/profile_number"
                        android:inputType="text"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:textColor="@color/textOnWhite"
                        android:textColorHint="@color/hintOnWhite"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/inter_medium_500"
                        android:text="@string/address_block"
                        android:textColor="@color/textOnWhiteAccentGray"
                        android:textSize="@dimen/_11sdp" />


                    <EditText
                        android:id="@+id/blockName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/auth_text_input_background"
                        android:fontFamily="@font/inter_medium_500"
                        android:hint="@string/address_block"
                        android:inputType="text"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:textColor="@color/textOnWhite"
                        android:textColorHint="@color/hintOnWhite"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/inter_medium_500"
                        android:text="@string/address_entrance"
                        android:textColor="@color/textOnWhiteAccentGray"
                        android:textSize="@dimen/_11sdp" />


                    <EditText
                        android:id="@+id/entrance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/auth_text_input_background"
                        android:fontFamily="@font/inter_medium_500"
                        android:hint="@string/address_entrance"
                        android:inputType="text"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:textColor="@color/textOnWhite"
                        android:textColorHint="@color/hintOnWhite"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/inter_medium_500"
                        android:text="@string/address_floor"
                        android:textColor="@color/textOnWhiteAccentGray"
                        android:textSize="@dimen/_11sdp" />


                    <EditText
                        android:id="@+id/floorName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/auth_text_input_background"
                        android:fontFamily="@font/inter_medium_500"
                        android:hint="@string/address_floor"
                        android:inputType="text"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:textColor="@color/textOnWhite"
                        android:textColorHint="@color/hintOnWhite"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/inter_medium_500"
                        android:text="@string/address_apartment"
                        android:textColor="@color/textOnWhiteAccentGray"
                        android:textSize="@dimen/_11sdp" />


                    <EditText
                        android:id="@+id/apartment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/auth_text_input_background"
                        android:fontFamily="@font/inter_medium_500"
                        android:hint="@string/address_apartment"
                        android:inputType="text"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:textColor="@color/textOnWhite"
                        android:textColorHint="@color/hintOnWhite"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/countryLL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/inter_medium_500"
                        android:text="@string/country_c"
                        android:textColor="@color/textOnWhiteAccentGray"
                        android:textSize="@dimen/_11sdp" />


                    <Spinner
                        android:id="@+id/countrySpinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/auth_text_input_background"
                        android:fontFamily="@font/inter_medium_500"
                        android:hint="@string/country"
                        android:textColor="@color/textOnWhite"
                        android:textColorHint="@color/hintOnWhite"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/countyLL"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/inter_medium_500"
                            android:text="@string/address_county_c"
                            android:textColor="@color/textOnWhiteAccentGray"
                            android:textSize="@dimen/_11sdp" />

                        <Spinner
                            android:id="@+id/countySpinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/auth_text_input_background"
                            android:fontFamily="@font/inter_medium_500"
                            android:textColor="@color/textOnWhite"
                            android:textColorHint="@color/hintOnWhite"
                            android:textSize="@dimen/_11sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/in_filled_county"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/inter_medium_500"
                            android:hint="@string/state_provinces"
                            android:textColor="@color/textOnWhiteAccentGray"
                            android:textSize="@dimen/_11sdp" />


                        <EditText
                            android:id="@+id/filled_county"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/auth_text_input_background"
                            android:fontFamily="@font/inter_medium_500"
                            android:inputType="text"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            android:textColor="@color/textOnWhite"
                            android:textColorHint="@color/hintOnWhite"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/cityLL"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/inter_medium_500"
                            android:text="@string/address_city_c"
                            android:textColor="@color/textOnWhiteAccentGray"
                            android:textSize="@dimen/_11sdp" />

                        <Spinner
                            android:id="@+id/citySpinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/auth_text_input_background"
                            android:fontFamily="@font/inter_medium_500"
                            android:hint="@string/country"
                            android:textColor="@color/textOnWhite"
                            android:textColorHint="@color/hintOnWhite"
                            android:textSize="@dimen/_11sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/in_filled_locality"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/inter_medium_500"
                            android:hint="@string/locality_area"
                            android:textColor="@color/textOnWhiteAccentGray"
                            android:textSize="@dimen/_11sdp" />


                        <EditText
                            android:id="@+id/filled_locality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/auth_text_input_background"
                            android:fontFamily="@font/inter_medium_500"
                            android:inputType="text"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            android:textColor="@color/textOnWhite"
                            android:textColorHint="@color/hintOnWhite"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/inter_medium_500"
                            android:text="@string/zip_code"
                            android:textColor="@color/textOnWhiteAccentGray"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/inter_medium_500"
                            android:text="@string/mendetory"
                            android:textColor="@color/redExpired"
                            android:textSize="@dimen/_11sdp" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/zipCode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/auth_text_input_background"
                        android:fontFamily="@font/inter_medium_500"
                        android:hint="@string/zip_code"
                        android:inputType="number"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:textColor="@color/textOnWhite"
                        android:textColorHint="@color/hintOnWhite"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/mContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/cta_background"
                android:fontFamily="@font/manrope_semibold_600"
                android:gravity="center"
                android:paddingVertical="@dimen/_12sdp"
                android:text="@string/continue_txt"
                android:textColor="@color/textOnSolid"
                android:textSize="@dimen/_11sdp" />

        </LinearLayout>
    </RelativeLayout>
</layout>