<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/mRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/mLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/mSelection"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTitle"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:layout_marginStart="@dimen/_20sdp"
                android:fontFamily="@font/inter_regular_400"
                android:textColor="@color/textOnWhite"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/mImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp" />

            <TextView
                android:id="@+id/mCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:fontFamily="@font/inter_regular_400"
                android:singleLine="true"
                android:textColor="@color/textOnWhite"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/mSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/ic_checked"
            android:visibility="gone" />

        <View
            android:id="@+id/mView"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/mLinear"
            android:layout_marginHorizontal="10dp"
            android:background="@color/textInputBorderGray" />

    </RelativeLayout>


</LinearLayout>